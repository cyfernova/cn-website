        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.37.0",
        "eslint-config-next": "^15.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.0",
        "eslint-plugin-storybook": "^9.1.10",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.3",
        "playwright": "^1.56.0",
        "storybook": "^9.1.10",
        "tailwindcss": "^4",
        "typescript": "^5",
        "vitest": "^3.2.4"
