{
    "name": "cn-website",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build --turbopack",
        "start": "next start",
        "lint": "biome check && eslint .",
        "lint:eslint": "eslint .",
